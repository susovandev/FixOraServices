<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Services</title>
<meta name="viewport" content="width=device-width,initial-scale=1">
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
</head>

<body class="bg-slate-50 text-slate-800">
  <%- include("../partials/toast.ejs") %>
<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-xl border-b border-slate-200">
  <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
    <!-- Logo -->
    <div class="flex items-center gap-2">
      <img src="/assets/logo.png" class="h-8" alt="FixOra Logo" />
      <span class="font-semibold text-lg text-slate-900">
  FixOra <span class="font-normal text-slate-500">Services</span>
</span>
</div>
    <!-- Nav -->
<nav class="hidden md:flex items-center">
  <a href="/services/instant"
     class="relative px-6 py-2.5 rounded-full
            text-sm font-semibold
            text-white
            bg-slate-900
            border border-slate-800
            shadow-md
            hover:bg-slate-800
            hover:-translate-y-0.5
            hover:shadow-xl
            transition-all duration-300
            group overflow-hidden">

    <!-- Green Shine -->
    <span class="absolute inset-0 -translate-x-full
                 bg-gradient-to-r from-transparent via-green-400/40 to-transparent
                 group-hover:translate-x-full
                 transition-transform duration-700 ease-in-out"></span>

    <span class="relative z-10">
      Book Service Instantly
    </span>
  </a>
</nav>
    <!-- Actions -->
    <div class="flex items-center gap-4 relative">
      <!-- Location (future live) -->
      <button
        class="hidden lg:flex items-center gap-1 text-sm text-slate-600 hover:text-slate-900 transition-colors duration-200"
        id="location-btn"
      >
        <i data-lucide="map-pin" class="w-4 h-4"></i>
        <span id="location-text">Dadar, Mumbai</span>
      </button>

      <!-- Search -->
      <div class="relative hidden md:block">
        <input
          type="text"
          placeholder="Search for services"
          class="px-3 py-2 w-56 border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-slate-600 focus:border-slate-600"
          id="service-search"
        />

        <!-- Search Dropdown -->
        <div
          id="search-dropdown"
class="absolute mt-2 w-full bg-white border border-slate-200 rounded-xl shadow-xl hidden"
        >
          <!-- Dynamic items -->
          <div class="p-3 text-sm text-gray-500">Start typing to search‚Ä¶</div>
        </div>
      </div>

      <!-- Icons -->
      <div class="flex items-center gap-3">
        <button class="p-2 rounded-full hover:bg-slate-100
 transition">
          <a href="/cart">
            <i class="w-5 h-5 fas fa-shopping-cart"></i>
          </a>
        </button>

        <!-- Join as Technician CTA -->
<a
  href="/technician/"
  class="hidden md:flex items-center gap-2
         px-4 py-2 rounded-xl
         bg-slate-900
         text-white text-sm font-medium
         shadow-md hover:shadow-lg
         hover:scale-[1.02] active:scale-[0.98]
         transition-all duration-200"
>
  <span class="relative flex h-2 w-2">
    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-white opacity-75"></span>
    <span class="relative inline-flex rounded-full h-2 w-2 bg-white"></span>
  </span>

  Join as a Technician

  <span class="ml-2 text-xs bg-white/20 px-2 py-0.5 rounded-full">
    Earn up to ‚Çπ50K+
  </span>
</a>


<!-- Profile -->
<div class="relative">
  <button
    id="profileBtn"
    class="p-2 rounded-full hover:bg-gray-100 transition"
  >
    <i class="fas fa-user w-5 h-5"></i>
  </button>

  <!-- Dropdown -->
  <div
    id="profileDropdown"
    class="absolute right-0 mt-2 w-56 bg-white border rounded-xl shadow-lg
    opacity-0 scale-95 pointer-events-none
    transition-all duration-150 origin-top-right z-50"
  >
    <% if (!user) { %>
      <button
        id="openLoginModal"
        class="w-full text-left px-4 py-2 text-sm hover:bg-gray-50"
      >
        Login
      </button>
    <% } else { %>
      <div class="px-4 py-2 text-sm text-gray-500">
        Hi, <%= user.username %>
      </div>
      <hr />
      <a href="/dashboard" class="block px-4 py-2 text-sm hover:bg-gray-50">
        Dashboard
      </a>
      <a href="/orders" class="block px-4 py-2 text-sm hover:bg-gray-50">
        My Orders
      </a>
      <a href="/profile" class="block px-4 py-2 text-sm hover:bg-gray-50">
        Profile
      </a>
      <hr />
      <a
        href="/logout"
        class="block px-4 py-2 text-sm text-red-600 hover:bg-gray-50"
      >
        Logout
      </a>
    <% } %>
  </div>
</div>
      </div>
  </div>
</header>

<!-- PAGE -->
<section class="max-w-7xl mx-auto px-6 py-10">

<!-- FILTER BAR -->
<form method="GET" action="/services"
class="bg-white rounded-2xl border shadow-sm p-5 mb-8">

<div class="grid md:grid-cols-3 gap-4">

<!-- SEARCH -->
<div class="relative">
<i class="fa-solid fa-magnifying-glass absolute left-3 top-3 text-slate-400"></i>
<input type="text"
name="search"
value="<%= search || '' %>"
placeholder="Search services..."
class="w-full pl-10 pr-3 py-2 border rounded-xl focus:ring-2 focus:ring-slate-600">
</div>

<!-- CATEGORY -->
<select name="categoryId"
class="border rounded-xl px-3 py-2 focus:ring-2 focus:ring-slate-600">

<option value="">All Categories</option>

<% categories.forEach(c=>{ %>
<option value="<%= c._id %>"
<%= String(categoryId)===String(c._id)?'selected':'' %>>
<%= c.name %>
</option>
<% }) %>

</select>

<!-- BUTTON -->
<button class="bg-slate-900 text-white rounded-xl px-5 py-2 hover:bg-slate-600 transition">
Filter
</button>

</div>

</form>


<!-- GRID -->
<% if(services && services.length){ %>

<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-7">

<% services.forEach(s=>{ %>

<a href="/services/<%= s._id %>"
class="group bg-white border rounded-3xl overflow-hidden hover:shadow-xl hover:-translate-y-1 transition">

<div class="relative h-52 bg-slate-100 overflow-hidden">

<img src="<%= s.images?.[0]?.url || 'https://dummyimage.com/600x400' %>"
class="w-full h-full object-cover group-hover:scale-105 transition duration-500">

<% if(s.instant){ %>
<span class="absolute top-4 left-4 px-3 py-1 text-xs bg-emerald-500 text-white rounded-full shadow">
Instant
</span>
<% } %>

<span class="absolute bottom-4 right-4 px-3 py-1 text-xs bg-white/90 border rounded-full shadow">
<%= s.baseDurationMinutes %> min
</span>

</div>

<div class="p-6">

<h3 class="font-semibold text-lg group-hover:text-slate-600 transition">
<%= s.name %>
</h3>

<p class="text-sm text-slate-500 mt-2 line-clamp-2">
<%= s.description %>
</p>

<div class="mt-5 flex justify-between items-center">

<span class="text-slate-900 font-semibold text-xl">
‚Çπ<%= s.pricingId?.basePrice || "‚Äî" %>
</span>

<span class="text-sm px-4 py-2 bg-slate-900 text-white rounded-xl group-hover:bg-slate-600 transition">
View
</span>

</div>

</div>

</a>

<% }) %>

</div>


<!-- PAGINATION -->
<div class="flex justify-center mt-12 gap-2">

<% for(let i=1;i<=totalPages;i++){ %>

<a href="?page=<%= i %>&search=<%= search || '' %>&categoryId=<%= categoryId || '' %>"
class="px-4 py-2 rounded-lg border
<%= i==page?'bg-slate-900 text-white border-slate-600':'bg-white hover:bg-slate-100' %>">

<%= i %>

</a>

<% } %>

</div>

<% } else { %>

<!-- EMPTY -->
<div class="bg-white rounded-3xl border p-16 text-center">

<i class="fa-regular fa-face-frown text-5xl text-slate-300 mb-5"></i>

<h3 class="text-xl font-semibold text-slate-700">
No services found
</h3>

<p class="text-slate-500 mt-2">
Try adjusting search or category filter
</p>

<a href="/services"
class="inline-block mt-6 px-6 py-3 bg-slate-600 text-white rounded-xl hover:bg-slate-700">
Reset Filters
</a>

</div>

<% } %>

</section>

<footer class="bg-gradient-to-br from-slate-950 via-slate-950 to-slate-900 text-white mt-20">
  <div class="max-w-7xl mx-auto px-6 py-16 grid md:grid-cols-4 gap-10">

    <!-- Company -->
    <div>
      <h4 class="font-semibold mb-4">FixOraServices</h4>
      <ul class="space-y-2 text-sm">
        <li><a href="/about">About us</a></li>
        <li><a href="/career">Careers</a></li>
        <li><a href="/terms">Terms & Conditions</a></li>
        <li><a href="/privacy">Privacy Policy</a></li>
      </ul>
    </div>

    <!-- Customers -->
    <div>
      <h4 class="font-semibold mb-4">For Customers</h4>
      <ul class="space-y-2 text-sm">
        <li>Categories near you</li>
        <li><a href="/reviews">Reviews</a></li>
        <li><a href="/contact">Contact us</a></li>
      </ul>
    </div>

    <!-- Professionals -->
    <div>
      <h4 class="font-semibold mb-4">For Professionals</h4>
      <ul class="space-y-2 text-sm">
        <li><a href="/technician/">Register as a professional</a></li>
      </ul>
    </div>

    <!-- Social -->
    <div>
      <h4 class="font-semibold mb-4">Social</h4>
      <div class="flex gap-3">
        <span class="p-2 bg-white rounded-full shadow">üê¶</span>
        <span class="p-2 bg-white rounded-full shadow">üìò</span>
        <span class="p-2 bg-white rounded-full shadow">üì∏</span>
        <span class="p-2 bg-white rounded-full shadow">üîó</span>
      </div>
    </div>

  </div>

  <div class="border-t text-center text-sm text-gray-500 py-6">
    ¬© 2026 FixOraServices. All rights reserved.
  </div>
</footer>
<%-
    include("../partials/client/profile-script.ejs") %>
<%- include("../partials/toast-script.ejs") %>

</body>
</html>
