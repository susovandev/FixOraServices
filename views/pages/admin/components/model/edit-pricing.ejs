<div id="edit-pricing-modal"
  class="modal fixed inset-0 hidden items-center justify-center
         bg-slate-900/60 backdrop-blur-md z-50">

  <div
    class="bg-white w-full max-w-xl rounded-3xl shadow-[0_20px_60px_rgba(0,0,0,0.15)]
           border border-slate-200 overflow-hidden">

    <!-- HEADER -->
    <div class="px-8 py-6 border-b border-slate-200 bg-gradient-to-b from-white to-slate-50">
      <h3 class="text-xl font-semibold text-slate-900 tracking-tight">
        Update Pricing
      </h3>
      <p class="text-sm text-slate-500 mt-1">
        Modify pricing configuration for the selected city
      </p>
    </div>

    <!-- FORM -->
    <form id="editPricingForm" method="POST" class="p-8 space-y-6">
      <input type="hidden" name="_method" value="PUT" />

      <!-- SERVICE -->
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1">
          Service
        </label>
        <select
          id="editServiceId"
          name="serviceId"
          aria-readonly="true"
          class="w-full px-4 py-3 rounded-xl border border-slate-300 bg-white
                 text-sm text-slate-900
                 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500
                 transition"
        >
          <% services.forEach(s => { %>
            <option value="<%= s._id %>"><%= s.name %></option>
          <% }) %>
        </select>
      </div>

      <!-- CITY -->
      <div class="relative">
        <label class="block text-sm font-medium text-slate-700 mb-1">
          City
        </label>

        <input
          type="text"
          id="editCitySearchInput"
          placeholder="Search city..."
          autocomplete="off"
          readonly
          class="w-full px-4 py-3 rounded-xl border border-slate-300
                 text-sm text-slate-900 placeholder-slate-400
                 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500
                 transition"
        />

        <input type="hidden" readonly name="city" id="editCityValue" />

        <div
          id="editCityDropdown"
          class="absolute z-50 mt-2 w-full bg-white
                 border border-slate-200 rounded-xl
                 shadow-xl max-h-56 overflow-y-auto hidden"
        ></div>
      </div>

      <!-- PRICE + COMMISSION -->
      <div class="grid grid-cols-2 gap-5">
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">
            Base Price
          </label>
          <input
            id="editBasePrice"
            name="basePrice"
            type="number"
            class="w-full px-4 py-3 rounded-xl border border-slate-300
                   text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500
                   transition"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">
            Commission (%)
          </label>
          <input
            id="editCommission"
            name="commissionPercent"
            type="number"
            class="w-full px-4 py-3 rounded-xl border border-slate-300
                   text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500
                   transition"
          />
        </div>
      </div>

      <!-- EXTRA CHARGES -->
      <label
        class="flex items-center gap-3 text-sm text-slate-700
               bg-slate-50 border border-slate-200 rounded-xl px-4 py-3"
      >
        <input
          id="editExtra"
          type="checkbox"
          name="extraChargesAllowed"
          class="h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500"
        />
        Allow additional charges
      </label>

      <!-- ACTIONS -->
      <div class="flex justify-end gap-3 pt-6 border-t border-slate-200">
        <button
          type="button"
          onclick="closeEditPricing()"
          class="px-5 py-2.5 rounded-xl text-sm font-medium
                 border border-slate-300 text-slate-700
                 hover:bg-slate-100 transition"
        >
          Cancel
        </button>

        <button
          class="px-6 py-2.5 rounded-xl text-sm font-semibold
                 bg-indigo-600 text-white
                 hover:bg-indigo-700
                 shadow-sm transition"
        >
          Update Pricing
        </button>
      </div>
    </form>
  </div>
</div>
