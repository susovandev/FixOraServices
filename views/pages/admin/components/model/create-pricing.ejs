<div id="create-pricing-modal"
  class="modal fixed inset-0 hidden items-center justify-center bg-black/40 backdrop-blur-sm z-50">

  <div class="bg-white w-full max-w-xl rounded-2xl shadow-2xl border border-gray-200">

    <!-- HEADER -->
    <div class="px-6 py-4 border-b">
      <h3 class="text-lg font-semibold text-gray-900">
        Create Service Pricing
      </h3>
      <p class="text-sm text-gray-500">
        Configure city-wise pricing & commission
      </p>
    </div>

    <!-- FORM -->
    <form action="/admin/pricing" method="POST" class="p-6 space-y-5">

      <!-- SERVICE -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Service
        </label>
        <select name="serviceId" required
          class="w-full px-4 py-2.5 rounded-xl border border-gray-300 bg-white focus:ring-2 focus:ring-indigo-500">
          <option disabled selected>Select service</option>
          <% services.forEach(s => { %>
            <option value="<%= s._id %>"><%= s.name %></option>
          <% }) %>
        </select>
      </div>


      <!-- SEARCHABLE CITY SELECT -->
<div class="relative">
  <label class="block text-sm font-medium text-gray-700 mb-1">
    City
  </label>

  <!-- Visible Input -->
  <input
    type="text"
    id="citySearchInput"
    placeholder="Search city..."
    autocomplete="off"
    class="w-full px-4 py-2.5 rounded-xl border border-gray-300
           focus:ring-2 focus:ring-indigo-500"
  />

  <!-- Hidden Actual Value -->
  <input type="hidden" name="city" id="cityValue" />

  <!-- Dropdown -->
  <div
    id="cityDropdown"
    class="absolute z-50 mt-1 w-full bg-white border border-gray-200
           rounded-xl shadow-lg max-h-56 overflow-y-auto hidden"
  >
    <% indianCities.forEach(city => { %>
      <div
        class="city-option px-4 py-2 text-sm cursor-pointer hover:bg-indigo-50"
        data-city="<%= city %>"
      >
        <%= city %>
      </div>
    <% }) %>
  </div>
</div>

      <!-- PRICE + COMMISSION -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Base Price (â‚¹)
          </label>
          <input name="basePrice" type="number" min="0" required
            class="w-full px-4 py-2.5 rounded-xl border border-gray-300 focus:ring-2 focus:ring-indigo-500"
            placeholder="299" />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Commission (%)
          </label>
          <input name="commissionPercent" type="number" min="0" max="100" required
            class="w-full px-4 py-2.5 rounded-xl border border-gray-300 focus:ring-2 focus:ring-indigo-500"
            placeholder="20" />
        </div>
      </div>

      <!-- EXTRA CHARGES -->
      <label class="flex items-center gap-3 text-sm text-gray-700">
        <input type="checkbox" name="extraChargesAllowed"
          class="w-4 h-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" />
        Allow additional charges
      </label>

      <!-- ACTIONS -->
      <div class="flex justify-end gap-3 pt-4 border-t">
        <button data-close-modal type="button"
          class="px-4 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50">
          Cancel
        </button>
        <button
          class="px-5 py-2 bg-indigo-600 text-white text-sm font-semibold rounded-lg hover:bg-indigo-700">
          Create Pricing
        </button>
      </div>

    </form>
  </div>
</div>