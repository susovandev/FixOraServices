<aside class="w-64 bg-gray-50 shadow-xl flex flex-col justify-between border-r border-gray-200">
  <!-- BRAND -->
  <div class="p-6 border-b border-gray-200">
    <h1 class="text-2xl font-bold text-indigo-700 tracking-tight"><%= pageTitle %></h1>
  </div>

  <!-- NAV -->
  <nav class="flex-1 px-4 py-6 space-y-1">
    <a
      href="/admin/dashboard"
      class="block px-4 py-2.5 rounded-lg transition-all <%= currentPath === '/admin/dashboard' ? 'bg-indigo-100/70 text-indigo-700 font-semibold border-l-4 border-indigo-600' : 'text-slate-700 hover:bg-indigo-50 hover:text-indigo-700' %>"
    >
      Dashboard
    </a>

    <a
      href="/admin/service-categories"
      class="block px-4 py-2.5 rounded-lg transition-all <%= currentPath === '/admin/service-categories' ? 'bg-indigo-100/70 text-indigo-700 font-semibold border-l-4 border-indigo-600' : 'text-slate-700 hover:bg-indigo-50 hover:text-indigo-700' %>"
    >
      Service Categories
    </a>
    <a
      href="/admin/services"
      class="block px-4 py-2.5 rounded-lg transition-all <%= currentPath === '/admin/services' ? 'bg-indigo-100/70 text-indigo-700 font-semibold border-l-4 border-indigo-600' : 'text-slate-700 hover:bg-indigo-50 hover:text-indigo-700' %>"
    >
      Manage Services
    </a>
    <a
      href="/admin/pricing"
      class="block px-4 py-2.5 rounded-lg transition-all <%= currentPath === '/admin/pricing' ? 'bg-indigo-100/70 text-indigo-700 font-semibold border-l-4 border-indigo-600' : 'text-slate-700 hover:bg-indigo-50 hover:text-indigo-700' %>"
    >
      Service Pricing
    </a>
    <a
      href="/admin/technicians"
      class="block px-4 py-2.5 rounded-lg transition-all <%= currentPath === '/admin/technicians' ? 'bg-indigo-100/70 text-indigo-700 font-semibold border-l-4 border-indigo-600' : 'text-slate-700 hover:bg-indigo-50 hover:text-indigo-700' %>"
    >
      Technician Management
    </a>
  </nav>

  <!-- USER FOOTER -->
  <div class="p-4 border-t border-gray-200 flex items-center justify-between gap-3 bg-white">
    <div class="flex items-center gap-3">
      <div class="relative">
        <img
          src="<%= admin?.avatarUrl?.url || 'https://ui-avatars.com/api/?name=' + admin?.username + '&background=4f46e5&color=fff' %>"
          class="w-10 h-10 rounded-full object-cover border border-gray-200"
        />
        <span
          class="absolute bottom-0 right-0 w-2.5 h-2.5 bg-green-500 border-2 border-white rounded-full"
        ></span>
      </div>

      <div class="leading-tight">
        <p class="text-sm font-semibold text-slate-800"><%= admin?.username %></p>
        <p class="text-xs text-slate-500 truncate max-w-[140px]">
          <%= admin.email.slice(0, 10).concat("...") %>
        </p>
        <span
          class="inline-block mt-1 text-xs bg-indigo-100/70 text-indigo-700 px-2 py-0.5 rounded-md font-medium"
        >
          <%= admin?.role %>
        </span>
      </div>
    </div>

    <form action="/admin/logout" method="GET">
      <button
        type="submit"
        class="text-red-600 hover:text-red-700 text-xs font-semibold bg-red-50 hover:bg-red-100 px-3 py-1.5 rounded-md transition"
      >
        Logout
      </button>
    </form>
  </div>
</aside>
