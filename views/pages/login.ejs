<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>User Login | FixOra</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        background:
          radial-gradient(circle at 0% 0%, rgba(99, 102, 241, 0.08), transparent 40%),
          radial-gradient(circle at 100% 100%, rgba(15, 23, 42, 0.05), transparent 40%), #f8fafc;
      }
    </style>
  </head>

  <body class="min-h-screen flex items-center justify-center px-6">
    <%- include("../partials/toast.ejs") %>

    <div
      class="w-full max-w-6xl grid md:grid-cols-2 bg-white border border-gray-200 rounded-3xl shadow-2xl overflow-hidden"
    >
      <!-- LEFT PANEL -->
      <div
        class="hidden md:flex relative flex-col justify-center p-14 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white overflow-hidden"
      >
        <!-- soft animated glow -->
        <div
          class="absolute -top-24 -left-24 w-72 h-72 bg-indigo-600/20 rounded-full blur-3xl animate-pulse"
        ></div>
        <div
          class="absolute -bottom-24 -right-24 w-72 h-72 bg-emerald-500/20 rounded-full blur-3xl animate-pulse"
        ></div>

        <div class="relative z-10">
          <h1 class="text-4xl font-bold mb-4">Welcome to FixOra</h1>

          <p class="text-slate-300 mb-10">
            Book trusted home services, track orders, and manage your profile easily.
          </p>

          <div class="space-y-5 text-sm">
            <!-- ITEM -->
            <div class="flex items-center gap-3 group">
              <span
                class="w-9 h-9 rounded-xl bg-white/10 backdrop-blur flex items-center justify-center border border-white/20 group-hover:bg-indigo-500 transition"
              >
                <i class="fa-solid fa-bolt text-white text-sm"></i>
              </span>
              <span class="text-slate-200">Instant booking confirmation</span>
            </div>

            <!-- ITEM -->
            <div class="flex items-center gap-3 group">
              <span
                class="w-9 h-9 rounded-xl bg-white/10 backdrop-blur flex items-center justify-center border border-white/20 group-hover:bg-indigo-500 transition"
              >
                <i class="fa-solid fa-user-shield text-white text-sm"></i>
              </span>
              <span class="text-slate-200">Verified professional technicians</span>
            </div>

            <!-- ITEM -->
            <div class="flex items-center gap-3 group">
              <span
                class="w-9 h-9 rounded-xl bg-white/10 backdrop-blur flex items-center justify-center border border-white/20 group-hover:bg-indigo-500 transition"
              >
                <i class="fa-solid fa-calendar-check text-white text-sm"></i>
              </span>
              <span class="text-slate-200">Easy rescheduling & order tracking</span>
            </div>
          </div>
        </div>
      </div>

      <!-- RIGHT PANEL -->
      <div class="p-10 md:p-14">
        <div class="max-w-md mx-auto">
          <h2 class="text-3xl font-semibold text-slate-900 mb-2">User Login</h2>

          <p class="text-gray-500 mb-8">Login to continue booking services</p>

          <!-- LOGIN FORM -->
          <form action="/login" method="POST" class="space-y-6">
            <!-- PHONE -->
            <div>
              <label class="block text-sm font-medium mb-1"> Phone Number </label>

              <input
                type="text"
                name="phone"
                required
                placeholder="+91 XXXXXXXX20"
                class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-slate-600 focus:border-slate-600 outline-none"
              />
            </div>

            <!-- REMEMBER -->
            <div class="flex items-center justify-between text-sm">
              <label class="flex items-center gap-2 text-gray-600">
                <input type="checkbox" name="remember" class="rounded border-gray-300" />
                Remember me
              </label>
            </div>

            <!-- BUTTON -->
            <button
              type="submit"
              class="w-full py-3 rounded-xl bg-slate-900 hover:bg-slate-700 text-white font-medium transition shadow-lg"
            >
              Login â†’
            </button>
          </form>
        </div>
      </div>
    </div>

    <%- include("../partials/toast-script.ejs") %> <%-
    include("../partials/client/profile-script.ejs") %>
  </body>
</html>
