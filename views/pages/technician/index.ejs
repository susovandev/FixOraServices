  </head>

  <body class="text-slate-800">
    <%- include("../../partials/toast.ejs") %>
    <!-- HERO SECTION -->
    <section
      class="relative overflow-hidden bg-gradient-to-b from-slate-50 via-white to-white text-slate-900 min-h-[640px] flex items-center"
    >
      <!-- SOFT STRIPE-LIKE BACKGROUND BLOBS -->
