    <!--  FINAL CTA -->
    <section class="py-20 bg-slate-900 text-center text-white">
      <h2 class="text-3xl font-semibold mb-4">Ready to grow your service business?</h2>

      <p class="text-slate-300 mb-8">
        Join FixOra today and start receiving verified customer bookings.
      </p>

      <form
        action="/technician/register"
        method="POST"
        class="flex justify-center gap-3 max-w-md mx-auto"
      >
        <span class="flex items-center px-3 bg-white text-slate-600 rounded-lg">+91</span>

        <input
          type="tel"
          name="phone"
          required
          class="flex-1 px-3 py-2 rounded-lg text-slate-800"
        />

        <button class="px-6 py-2 bg-emerald-600 hover:bg-emerald-700 rounded-lg">Join Now</button>
